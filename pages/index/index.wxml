<!--index.wxml-->
<view class='title-bar'>
  <view class='title' wx:for='{{[11, 22, 33, 44, 55, 66, 77]}}'>
    <view >{{item}}</view>
  </view>
</view>
<view class='content-wrapper'>
  <view class='content-item' wx:for='{{[0, 1, 2, 3, 4, 5, 6]}}'>
    <view wx:if='{{item === 0}}' class='content-top-wrapper'>
      <image class='top-wrapper-bgp' src='/img/pic.jpg'></image>
      <view class='top-inner-wrapper'>
        <view class='top'>
          <view class='top-title'>title</view>
          <view class='top-detail'>detail</view>
        </view>
        <image class='top-bgp' src='/img/pic.jpg'></image>
      </view>
    </view>
    <view wx:if='{{item !== 0}}' class='content-normal-wrapper'>
      <view class='normal-info'>
        <view class='normal-title'>title</view>
        <view class='normal-detail'>detail</view>
      </view>
      <image class='normal-img' src='/img/pic.jpg'>img</image>
    </view>
  </view>
</view>
