<view class='title-wrapper'>
  <view class='title'>{{title}}</view>
  <view class='subtitle'>
    <view class='detail'>{{detail}}</view>
    <view class='readcount'>{{readcount}}</view>
  </view>
</view>
<view class='content-wrapper'>
  <view class='paragraph' wx:for='{{paragraph}}'>
    <view wx:if='{{item.id == 1}}'>
      <view>{{item.text}}</view>
      <image class='content-img' src='{{img}}'></image>
    </view>
    <view wx:else>{{item.text}}</view>
  </view>
</view>